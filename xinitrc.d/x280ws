# oddball device with highdpi display
case "$(xrandr)" in
(*'VGA-1 connected primary 1920x1056'*)
  xrandr \
    --output VGA-1 --primary --mode 1920x1056 --pos 0x0 --fbmm 279x153 \
    --output VGA-2 --off \
    --output VGA-3 --off
  ;;
(*'rdp0 connected 1920x1056'*)
  xrandr \
    --output rdp0 --mode 1920x1056 --pos 0x0 --fbmm 279x153
  ;;
esac
