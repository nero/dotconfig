bind r source-file ~/.tmux.conf

set -g set-titles on
set -g set-titles-string "[#h:#S] #T"
set -g status-left-length 40
set -g status-left '#{?client_prefix,#[fg=yellow]#[bold],}[#h:#S]#[default] '
set -g status-right ' %F %H:%M'
set -g base-index 1

set -g prefix C-b
set -g prefix2 F12
bind C-b send-prefix
bind F12 send-keys F12

bind -T copy-mode v send-keys -X copy-pipe-and-cancel 'xdg-open "$(cat)"'
