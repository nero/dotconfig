bind r source-file ~/.tmux.conf

set -g set-titles on
set -g set-titles-string "#h"

set -g status-style "bg=colour0"
set -g status-position top
set -g status-justify left
set -g status-left '#[underscore]#{?client_prefix,#[bold],}#h #S   '
set -g status-right ' %F %H:%M'

set -g base-index 1

set -g automatic-rename on
set -g automatic-rename-format '#T'

set -g window-status-separator ''
set -g window-status-format '#[underscore]/ #I:#W \  '
set -g window-status-current-format '#[underscore]#[default,bold]/ #I:#W \#[underscore]  '

set -g default-terminal tmux

set -g prefix C-b
set -g prefix2 F12
bind C-b send-prefix
bind F12 send-keys F12
