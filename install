#!/bin/sh
ln -sfn .config/profile "${HOME}"/.profile

case "$SHELL" in
(*/bash)
  rm "$HOME/.bash_profile"
  ln -sfn "${ENV#$HOME/}" "$HOME/.bashrc"
  ;;
(*/zsh)
  ln -sfn "${ENV#$HOME/}" "$HOME/.zshrc"
  ;;
esac

for f in "$HOME"/.config/*/install; do
  c=${f%/*}
  command -v "${c##*/}" >/dev/null 2>&1 && . "$f"
done
