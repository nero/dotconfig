mrproper() (
  rm -rf ~/.ccache ~/.buildroot-ccache ~/.cache ~/.thumbnails \
    ~/.local/share/Trash ~/.local/share/*/*history*
    ~/.local/share/gvfs-metadata ~/.w3m

