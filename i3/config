set $mod mod1
floating_modifier $mod
font pango:Monospace 12

set $bgcol #000000
set $fgcol #55ffff
set $ugcol #ffff55
set $wkcol #333333

set $kbd us

# resize wallpaper with
#   new="$(xrandr | grep \* | cut -d' ' -f4)"
#   convert orig -resize "$new^" -gravity center -crop "$new"+0+0 wallpaper

exec_always --no-startup-id "xrdb $XDG_CONFIG_HOME/X/resources"
exec_always --no-startup-id "setxkbmap $kbd; xmodmap $XDG_CONFIG_HOME/X/modmap"
exec_always --no-startup-id "xset b off"
exec_always --no-startup-id "feh --no-fehbg --bg-fill $XDG_CONFIG_HOME/wallpaper"

# i3 stuff
bindsym $mod+Return exec "exec i3-sensible-terminal"
bindsym $mod+space exec --no-startup-id i3-dmenu-desktop --entry-type=command
bindsym $mod+c exec --no-startup-id "i3-msg restart; sh $XDG_CONFIG_HOME/X/rc"
bindsym $mod+i exit
bindsym $mod+l exec --no-startup-id "scrot -e 'convert $f -blur 0x08 $$XDG_RUNTIME_DIR/lock.png; rm $f'; i3lock -i $XDG_RUNTIME_DIR/lock.png"
bindsym $mod+o exec --no-startup-id killall -9 firefox firefox-esr x-www-browser
bindsym $mod+g exec --no-startup-id "ddg"

# Legacy keybinds
bindsym Mod1+F4 kill
bindsym Mod1+Tab focus right
bindsym Mod1+Shift+Tab focus left
bindsym Print exec --no-startup-id scrot

# Standalone keys
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q set Master 5dB+ unmute
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q set Master 5dB- unmute
bindsym XF86AudioMute exec --no-startup-id amixer -q set Master toggle
bindsym XF86PowerOff exit

bindsym $mod+f floating toggle

# move focus
bindsym $mod+w focus up
bindsym $mod+a focus left
bindsym $mod+s focus down
bindsym $mod+d focus right
bindsym $mod+q workspace 1
bindsym $mod+e workspace 2

# move window
bindsym $mod+Shift+w move up
bindsym $mod+Shift+a move left
bindsym $mod+Shift+s move down
bindsym $mod+Shift+d move right
bindsym $mod+Shift+q move container to workspace 1
bindsym $mod+Shift+e move container to workspace 2

# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt
  bindsym Escape mode "default"
  bindsym $mod+Escape mode "default"
}

# disable shortcuts, relevant for games making use of the Alt key
bindsym $mod+Escape mode "off"
mode "off" {
  bindsym $mod+Escape mode "default"
}

new_window pixel 2
new_float pixel 2
hide_edge_borders both
workspace_layout tabbed

for_window [title="^rdesktop"] floating disable

# class                 border  backgr. text    indicator child_border
client.focused          $fgcol  $fgcol  $bgcol  #2e9ef4   #285577
client.focused_inactive $wkcol  $wkcol  $bgcol  #484e50   #5f676a
client.unfocused        $bgcol  $bgcol  $fgcol  #292d2e   #222222
client.urgent           $ugcol  $ugcol  $bgcol  #900000   #900000

client.background       #ffffff
