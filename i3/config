set $mod mod1
floating_modifier $mod

# fetch settings from xresources
set_from_resource $fname faceName Monospace
set_from_resource $fsize faceSize 12
set $bgcol #000000
set $fgcol #d2738a
set $ugcol #ffff55
set $wkcol #333333

exec exec x-terminal-emulator

# basic keybinds
bindcode $mod+36 exec exec x-terminal-emulator
bindcode $mod+65 exec --no-startup-id i3-dmenu-desktop --dmenu="dmenu -i -fn xft:$fname:size=$fsize" --entry-type=command
bindcode $mod+54 exec --no-startup-id i3-msg restart
bindcode $mod+31 exit
bindcode $mod+46 exec --no-startup-id i3lock
bindcode $mod+30 exec --no-startup-id xdg-open "$(xclip -o)"
bindcode $mod+32 exec --no-startup-id killall -9 firefox firefox-esr x-www-browser

# compat keybinds
bindsym Mod1+F4 kill
bindsym Mod1+Tab focus right
bindsym Mod1+Shift+Tab focus left

# gimmick keys
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q set Master 5dB+ unmute
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q set Master 5dB- unmute
bindsym XF86AudioMute exec --no-startup-id amixer -q set Master toggle
bindsym XF86PowerOff exit

bindcode $mod+41 floating toggle

# move focus (qwe/asd)
bindcode $mod+24 workspace 1
bindcode $mod+25 focus up
bindcode $mod+26 workspace 2
bindcode $mod+38 focus left
bindcode $mod+39 focus down
bindcode $mod+40 focus right

# move window (QWE/ASD)
bindcode $mod+Shift+24 move container to workspace 1
bindcode $mod+Shift+25 move up
bindcode $mod+Shift+26 move container to workspace 2
bindcode $mod+Shift+38 move left
bindcode $mod+Shift+39 move down
bindcode $mod+Shift+40 move right

# resize window (you can also use the mouse for that)
bindcode $mod+27 mode "resize"
mode "resize" {
  bindsym Left resize shrink width 10 px
  bindsym Down resize grow height 10 px
  bindsym Up resize shrink height 10 px
  bindsym Right resize grow width 10 px
  bindsym Escape mode "default"
  bindsym $mod+Escape mode "default"
}

# disable shortcuts, relevant for games making use of the Alt key
bindsym $mod+Escape mode "off"
mode "off" {
  bindsym $mod+Escape mode "default"
}

new_window pixel 2
new_float pixel 2
hide_edge_borders both
workspace_layout tabbed

# Behavior quirks
for_window [title="^rdesktop"] floating disable
for_window [title="Desktop"] floating disable

# Font
font pango:$fname $fsize

# Color scheme          border  backgr. text    indicator child_border
client.focused          $fgcol  $fgcol  #ffffff #2e9ef4   #285577
client.focused_inactive $wkcol  $wkcol  $bgcol  #484e50   #5f676a
client.unfocused        $fgcol  $bgcol  $fgcol  #292d2e   #222222
client.urgent           $ugcol  $ugcol  $bgcol  #900000   #900000
client.background       #ffffff
