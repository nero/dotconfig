# Config for interactive shells
unset PS1 PROMPT_COMMAND HISTFILE

xtitle() (
  printf "\033]2;%s\007" "$( printf "%s" "$*" | tr -d "\007\033" )"
)

PS1='${PWD##*/}\$ '
FCEDIT=$VISUAL

has_coreutils=$(command -v dircolors)

alias ls="ls ${has_coreutils:+--color=auto }-AF"
alias bc="bc -l"

stty \
	eof ^D \
	eol ^- \
	erase ^? \
	intr ^C \
	kill ^- \
	quit ^- \
	susp ^Z \
	start ^- \
	stop ^-

xtitle "$PWD - $HOSTNAME"

greeter
