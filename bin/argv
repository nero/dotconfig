#!/usr/bin/awk -f
BEGIN {
  for (i = 1; i < ARGC; i++) {
    escaped = ARGV[i]
    if (length(escaped) == 0) {
      printf "'' "
    } else {
      gsub(/[|&;<>()$`\\"\' \t\n*?\[#~=%]/, "\\\\&", escaped)
      single_quoted = ARGV[i]
      gsub(/'/,"'\\''", single_quoted)
      single_quoted = "'" single_quoted "'"
      if (length(escaped) > length(single_quoted)) {
        printf "%s ", single_quoted
      } else {
        printf "%s ", escaped
      }
    }
  }
  printf "\n"
}
