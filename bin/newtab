#!/bin/sh
# i use both i3 and tmux like tabbed multiplexers, this launches a
# command in a new 'tab'. This is mostly used by xdg-open.
# Example: newtab watch lsof -i -n -P
if [ -n "$TMUX" ]; then
  tmux new-window "$@"
elif [ -n "$DISPLAY" ]; then
  i3-sensible-terminal -e "$@" &
else
  echo "No multiplexer found"
  exit 1
fi
